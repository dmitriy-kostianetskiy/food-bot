{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "../.eslintrc.json",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "space-before-function-paren": "off",
    "no-unused-vars": "off",
    "no-useless-constructor": "off",
    "no-dupe-class-members": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ]
  }
}
