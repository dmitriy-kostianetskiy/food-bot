{
  "name": "menu-function",
  "description": "Menu generator cloud functions for firebase",
  "dependencies": {
    "@google-cloud/pubsub": "^1.7.3",
    "firebase-admin": "~8.12.1",
    "firebase-functions": "^3.6.1",
    "lodash": "^4.17.15",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.2",
    "@types/lodash": "^4.14.151",
    "jest": "^26.0.1",
    "ts-jest": "^26.0.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "yarn build && firebase deploy --only functions",
    "config": "firebase functions:config:set bot.key=\"BOT_TOKEN\"",
    "logs": "firebase functions:log",
    "test": "yarn jest"
  },
  "engines": {
    "node": "> 10"
  },
  "main": "lib/index.js",
  "private": true
}
