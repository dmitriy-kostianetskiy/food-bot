{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./tsc-out",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types",
        "../../node_modules/@types"
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "resolveJsonModule": true
    },
    "strictNullChecks": true,
    "exclude": [
      "node_modules",
      "src/test.ts",
      "**/*.spec.ts"
    ]
  }
